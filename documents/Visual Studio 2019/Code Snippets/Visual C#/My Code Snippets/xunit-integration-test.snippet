<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Xunit integration test</Title>
			<Author>BA</Author>
			<Description>Create a xunit class</Description>
			<Shortcut>xitest</Shortcut>
		</Header>
		<Snippet>
			<Imports>
				<Import>
					<Namespace>System</Namespace>
				</Import>
				<Import>
					<Namespace>System.Threading.Tasks</Namespace>
				</Import>
				<Import>
					<Namespace>System.Linq</Namespace>
				</Import>
			</Imports>
			<Declarations>
				<Literal>
					<ID>classname</ID>
					<ToolTip>Replace with specified name</ToolTip>
					<Default>MyClass</Default>
				</Literal>
			</Declarations>
			<Code Language="CSharp" kind="file"><![CDATA[
using TestFixture = WebHostFixture<$classname$>;
public class $classname$Tests : IClassFixture<TestFixture>
{
    private readonly TestFixture _fixture;
    public $classname$Tests(TestFixture fixture)
    {
        _fixture = fixture;
    }

    [Fact]
    public async Task Test()
    {
		$end$
    }
}]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
